        <Condition ID="CheckBattery"/>

        <Action ID="ArmMovement">
            <input_port name="x_mm" type="float"/>
            <input_port name="y_mm" type="float"/>
            <input_port name="z_mm" type="float"/>
            <input_port name="gripper_position" type="float"/>
        </Action>
